{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "BRIK v5 TypeScript API with Fastify and hexagonal architecture",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "openapi:generate": "ts-node scripts/generate-openapi.ts",
    "openapi:validate": "swagger-cli validate openapi.yaml"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^1.9.3",
    "fastify": "^4.26.2",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "zod": "^3.22.4",
    "redis": "^4.6.13",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcrypt": "^5.0.2",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2",
    "@apidevtools/swagger-cli": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "brik",
    "typescript",
    "fastify",
    "hexagonal",
    "idempotency",
    "circuitalidad"
  ]
}